- if is_admin?
  .page-header
    %h1= t('headers.good_orders.index')

  %table.table.table-hover.table-striped
    %thead
      %tr
        %th= GoodOrder.human_attribute_name(:id)
        %th= GoodOrder.human_attribute_name(:good)
        %th= GoodOrder.human_attribute_name(:order)
        %th= GoodOrder.human_attribute_name(:digit)

    %tbody
      - @good_orders.each do |good_order|
        %tr
          %td{data: {label: GoodOrder.human_attribute_name(:id)} }
            = good_order.id
          %td{data: {label: GoodOrder.human_attribute_name(:good)} }
            = good_order.good.title
          %td{data: {label: GoodOrder.human_attribute_name(:order)} }
            = good_order.order.order_number
          %td{data: {label: GoodOrder.human_attribute_name(:digit)} }
            = good_order.digit
- else
  %h1{style: "color: red"} Доступ запрещен
